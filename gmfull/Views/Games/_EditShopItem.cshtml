                        <input type="text" class="form-control input-sm" value="@item.TemplateID" disabled>
                    </div>
                    <input type="hidden" id="TemplateID" name="TemplateID" value="@item.TemplateID">
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="GroupID">GroupID</label>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-sm-4">
                                <input type="text" id="GroupID" name="GroupID" class="form-control input-sm must-digits" value="@item.GroupID">
                            </div>                           
                            <div class="col-sm-8">
                                <label class="col-sm-5 control-label" for="ShopID">ShopID</label>
                                <div class="col-sm-7">
                                    <input type="text" id="ShopID" name="ShopID" class="form-control input-sm must-digits" value="@item.ShopID">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="BuyType">BuyType</label>
                    <div class="col-md-9">
                        <input type="text" id="BuyType" name="BuyType" class="form-control input-sm must-digits" value="@item.BuyType">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="IsBind">IsBind</label>
                    <div class="col-md-9">
                        <input type="text" id="IsBind" name="IsBind" class="form-control input-sm must-digits" value="@item.IsBind">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="LabelD">Label</label>
                    <div class="col-md-9">
                        <input type="text" id="Label" name="Label" class="form-control input-sm must-digits" value="@item.Label">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="Beat">Beat</label>
                    <div class="col-md-9">
                        <input type="text" id="Beat" name="Beat" class="form-control input-sm must-digits" value="@item.Beat">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="LimitCount">LimitCount</label>
                    <div class="col-md-9">
                        <input type="text" id="LimitCount" name="LimitCount" class="form-control input-sm must-number" value="@item.LimitCount">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="LimitGrade">LimitGrade</label>
                    <div class="col-md-9">
                        <input type="text" id="LimitGrade" name="LimitGrade" class="form-control input-sm must-digits" value="@item.LimitGrade">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="StartDate">StartDate</label>
                    <div class="col-md-9">
                        <input type="text" id="StartDate" name="StartDate" class="form-control input-sm must-date" value="@item.StartDate">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="EndDate">EndDate</label>
                    <div class="col-md-9">
                        <input type="text" id="EndDate" name="EndDate" class="form-control input-sm must-date" value="@item.EndDate">
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-md-3 control-label" for="AUnit">AUnit</label>
                    <div class="col-md-9">
                        <input type="text" id="AUnit" name="AUnit" class="form-control input-sm must-number" value="@item.AUnit">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="APrice1">APrice1</label>
                    <div class="col-md-9">
                        <input type="text" id="APrice1" name="APrice1" class="form-control input-sm must-number" value="@item.APrice1">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="AValue1">AValue1</label>
                    <div class="col-md-9">
                        <input type="text" id="AValue1" name="AValue1" class="form-control input-sm must-number" value="@item.AValue1">
                    </div>
                </div>
                <input type="hidden" id="APrice2" name="APrice2" value="@item.APrice2">
                <input type="hidden" id="AValue2" name="AValue2" value="@item.AValue2">
                <input type="hidden" id="APrice3" name="APrice3" value="@item.APrice3">
                <input type="hidden" id="AValue3" name="AValue3" value="@item.AValue3">
                <div class="form-group">
                    <label class="col-md-3 control-label" for="BUnit">BUnit</label>
                    <div class="col-md-9">
                        <input type="text" id="BUnit" name="BUnit" class="form-control input-sm must-number" value="@item.BUnit">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="BPrice1">BPrice1</label>
                    <div class="col-md-9">
                        <input type="text" id="BPrice1" name="BPrice1" class="form-control input-sm must-number" value="@item.BPrice1">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="BValue1">BValue1</label>
                    <div class="col-md-9">
                        <input type="text" id="BValue1" name="BValue1" class="form-control input-sm must-number" value="@item.BValue1">
                    </div>
                </div>
                <input type="hidden" id="BPrice2" name="BPrice2" value="@item.BPrice2">
                <input type="hidden" id="BValue2" name="BValue2" value="@item.BValue2">
                <input type="hidden" id="BPrice3" name="BPrice3" value="@item.BPrice3">
                <input type="hidden" id="BValue3" name="BValue3" value="@item.BValue3">
                <div class="form-group">
