@model SqlDataProvider.Data.ShopItemInfo
@{
    Layout = "~/Views/Shared/_RenderLayout.cshtml";
    ViewBag.Title = "Chỉnh sửa thông số";
    var item = Model;
    string chek = string.Empty;

}
<div class="modal-header themed-background-default">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">
        @ViewBag.Title
        <i class="gi gi-chevron-right" style="font-size:10px"></i>
        <span style="color:white"><strong> @Html.TItemName(item.TemplateID)</strong></span>
    </h4>
</div>
<div class="modal-body">
    <!-- From Block -->
    <form action="@Html.Raw(Url.Action("EditShopItem", "Games", routeValues: new { id = item.ID}))"
          method="post" class="form-horizontal form-bordered" id="frm-update-shop-item" onsubmit="return false;">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-md-3 control-label" for="ID">ID</label>
                    <div class="col-md-9">
