                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="EndTime">EndTime</label>
                    <div class="col-md-9">
                        <input type="text" id="EndTime" name="EndTime" class="form-control input-sm must-date" placeholder="@StaticFunction.GetTranslation("Model.PlaceHolder.Date")" value="@item.EndTime">
                    </div>
                </div>     
