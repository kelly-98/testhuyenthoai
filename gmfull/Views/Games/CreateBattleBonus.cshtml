                <div class="form-group">
                    <label class="col-md-3 control-label" for="MagicAttack">MagicAttack</label>
                    <div class="col-md-9">
                        <input type="text" id="MagicAttack" name="MagicAttack" class="form-control input-sm must-number" placeholder="@StaticFunction.GetTranslation("Model.PlaceHolder.Int")" value="@item.MagicAttack">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="MagicDefence">MagicDefence</label>
                    <div class="col-md-9">
                        <input type="text" id="MagicDefence" name="MagicDefence" class="form-control input-sm must-number" placeholder="@StaticFunction.GetTranslation("Model.PlaceHolder.Int")" value="@item.MagicDefence">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="goldValidate">goldValidate</label>
                    <div class="col-md-9">
                        <input type="text" id="goldValidate" name="goldValidate" class="form-control input-sm must-number" placeholder="@StaticFunction.GetTranslation("Model.PlaceHolder.Int")" value="@item.goldValidate">
                    </div>
                </div>
            </div>
        </div>     
        <div class="form-group form-actions">
            <div class="col-md-12 text-right">
                <button type="submit" class="btn btn-sm btn-warning btn-submit2"> @StaticFunction.GetTranslation("Model.Add")</button>
                <button type="button" class="btn btn-sm btn-primary" data-dismiss="modal"> @StaticFunction.GetTranslation("Model.CLose")</button>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <script>

          $(function () {
            var startBtn = $('.btn-submit2');
            // On start button click start loading again
            startBtn.on('click', function () {
                $(this).button('loading');
            });

            /* Validate */

            $('form#frm-add-battlebonus').each(function () {
                $(this).validate({
                    errorClass: 'help-block animation-slideDown',
                    errorElement: 'div',
                    errorPlacement: function (error, e) {
                        e.parents('.form-group > div').append(error);
                    },
                    highlight: function (e) {
                        $(e).closest('.form-group').removeClass('has-success has-error').addClass('has-error');
                        $(e).closest('.help-block').remove();
                        startBtn.button('reset');
                    },
                    success: function (e) {
                        e.closest('.form-group').removeClass('has-success has-error');
                        e.closest('.help-block').remove();
                    },
                    rules: {                    
                        'ID': {
                            required: true,
                            remote: {
                                url: "@Url.Action("CheckBattleBonusId", "Games")",
                                type: "post"
                            }						
                        }
                    },
                    messages: {                    
                        'ID': {
                            required: '@StaticFunction.GetTranslation("Model.Add.Required")',
                            remote: "@StaticFunction.GetTranslation("Model.Add.Remote")"
                        }
                    },
                    submitHandler: function (e) {
                        $('#loading-bgr').show();
                        $.ajax({
                            url: e.action,
                            type: e.method,
                            data: $(e).serialize(),
                            success: function (result) {
                                $('#loading-bgr').hide();
                                $('#response-hodler').html(result);
                                startBtn.button('reset');
                            },
                            error: function (xhr) {
                                $('#loading-bgr').hide();
                                showGrowl('Error: ' + xhr.status + ' ' + xhr.statusText, 'danger');
                                startBtn.button('reset');
                            }
                        });
                        return false;
                    }
                });
            });
        });

    </script>
}
